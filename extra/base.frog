// stdin functions
func double scanDouble() {
    asm {
         "EFCALL \"stdin_dbl\";"
         "RET DBL;"
    }
}

func float scanFloat() {
    asm {
         "EFCALL \"stdin_flt\";"
         "RET FLT;"
    }
}

func long scanLong() {
    asm {
         "EFCALL \"stdin_nl\";"
         "RET QW;"
    }
}

func int scanInt() {
    asm {
        "EFCALL \"stdin_ni\";"
        "RET DW;"
    }
}

func short scanShort() {
    asm {
        "EFCALL \"stdin_ns\";"
        "RET W;"
    }
}

func byte scanByte() {
     asm {
         "EFCALL \"stdin_nb\";"
         "RET B;"
     }
}

func char scanChar() {
     asm {
         "EFCALL \"stdin_c\";"
         "RET B;"
     }
}

func char[] scanString() {
    asm {
        "EFCALL \"stdin_s\";"
        "RET DW;"
    }
}

// string length
func int strlen(char[] s) {
    int l = 0;
    for (int i = 0; i < sizeof(s); i += 1) {
        if (s[i] != 0) {
            l += 1;
        }
    }
    return l;
}