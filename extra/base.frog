// SimpleIO library

// stdout functions
func void print(double d) {
    asm {
         "PUSH DBL @d;"
         "EFCALL \"stdout_dbl\";"
    }
}

func void print(float f) {
    asm {
         "PUSH FLT @f;"
         "EFCALL \"stdout_flt\";"
    }
}

func void print(long l) {
    asm {
         "PUSH QW @l;"
         "EFCALL \"stdout_nl\";"
    }
}

func void print(int a) {
    asm {
        "PUSH DW @a;"
        "EFCALL \"stdout_ni\";"
    }
}

func void print(short a) {
    asm {
        "PUSH DW @a;"
        "EFCALL \"stdout_ns\";"
    }
}

func void print(byte b) {
     asm {
         "PUSH B @b;"
         "EFCALL \"stdout_nb\";"
     }
}

func void print(char c) {
     asm {
         "PUSH B @c;"
         "EFCALL \"stdout_c\";"
     }
}

func void print(char[] s) {
     asm {
         "PUSH DW @s;"
         "EFCALL \"stdout_s\";"
     }
}


